<ul class="list-group list-group-horizontal row justify-content-center">
    <li class="list-group-item col-2" id="afficherNomVille{{ villeUpdate.id }}">{{ villeUpdate.nom }}</li>
    <li class="list-group-item col-2" id="afficherCPville{{ villeUpdate.id }}">{{ villeUpdate.codePostal }}</li>
    <li class="list-group-item col-1" id="modifier{{ villeUpdate.id }}">
        <button class="btn btn-outline-secondary" title="Modifier" alt="modifier la ville" onclick="modifierVille({{ villeUpdate.id }})">
            <i class="bi bi-pencil"></i>
        </button>
    </li>
    <li class="list-group-item col-1" id="supprimer{{ villeUpdate.id }}" title="Supprimer" alt="Supprimer la ville">
        <button class="btn btn-outline-secondary">
            <i class="bi bi-trash"></i>
        </button>
    </li>
</ul>
