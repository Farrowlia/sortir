<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" type="image/png" href=""/>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Original+Surfer&family=Permanent+Marker&family=Press+Start+2P&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Ruluko&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/cookie.css') }}">
    {% block styleSheets %}{% endblock %}

    <title>{% block title %}Sortir.com{% endblock %}</title>
    <style>{% block extraStyles %}{% endblock %}</style>
</head>
<body>



<header>
    {%  include("inc/navbar.html.twig") %}
</header>

{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="position-fixed bottom-0 end-0 p-3 m-3 alert alert-{{ label }} flash-{{ label }} messageFlash" role="alert" style="z-index: 5;cursor: pointer" aria-atomic="true" id="messageFlash">
            <div class="row justify-content-end">
                <div class="col-3"><i class="bi bi-x-circle-fill"></i></div>
            </div>
            <div class="row">
                <div class="col">{{ message }}</div>
            </div>
        </div>
    {% endfor %}
{% endfor %}


<main>
    {# popup cookie #}
    <div id="popupCookie">
        {{ render(path('ch_cookie_consent.show_if_cookie_consent_not_set')) }}
    </div>
    {%  block body %}
        Ce texte est le body par d√©fault
    {% endblock %}
</main>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="{{ asset('js/requeteAjax.js') }}"></script>
<script src="{{ asset('js/app.js') }}"></script>
<script>
    window.onload = () => {
        document.querySelectorAll("div.messageFlash").forEach(value => {
            setTimeout(function(){ value.remove(); }, 5000);
            value.addEventListener("click", () => {
                value.remove();
            });
        });
        document.querySelectorAll('#popupCookie button').forEach(button => {
            button.addEventListener("click", () => {
                document.querySelector('#popupCookie').remove();
            });
        });
    }
</script>

{% block javascripts %}{% endblock %}
</body>
</html>
