{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container pt-3 pb-5">
        <div class="row">
            <div class="col">
                <div class="row pt-4 pb-4">
                    <h3>Réinitialisez votre mot de passse</h3>
                    <span>Entrez votre adresse e-mail et nous vous enverrons un</span>
                    <span>lien pour réinitialiser votre mot de passe.</span>
                </div>
                {{ form_start(requestForm) }}
                <div class="row justify-content-center">
                    {{ form_row(requestForm.email) }}
                </div>
                <div class="row pt-2">
                    <div class="col-md-4">
                        <button class="btn btn-primary">Envoyer</button>
                    </div>
                </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>

{% endblock %}
